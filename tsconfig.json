{
  "display": "Node 22",
  "_version": "22.0.0",
  "compilerOptions": {
    "lib": [
      "es2023"
    ],
    "module": "node16",
    "target": "es2022",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "tests",
    "node_modules"
  ]
}